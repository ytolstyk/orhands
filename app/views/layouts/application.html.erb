<!DOCTYPE html>
<html>
<head>
  <title>Orhands</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- navbar -->

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">ORHands</a>
    </div>

      <ul class='nav navbar-nav'>
        <li>
          <a href="#">Hospitals</a>
        </li>
        <li>
          <a href="#">Surgeons</a>
        </li>
        <li>
          <a href="#">Procedures</a>
        </li>
      </ul>
      <form class="navbar-form navbar-left form-search" role="search">
        <div class="form-group" id="div-search">
          <input type="text" class="form-control search-input" placeholder="hospital/surgeon/procedure">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
      <% if current_user %>
        <ul class="nav navbar-nav navbar-right navbar-user-info">
          <li><a href="#"><%= current_user.username %></a></li>
          <li><a href="#" id="sign-out">Sign out</a></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right navbar-user-info">
          <li><a href="#"
            data-toggle="modal"
            data-target="#signInModal"
            id="sign-in-link">Sign in</a></li>
          <li><a href="#"
            data-toggle="modal"
            data-target="#signInModal"
            id="sign-up-link">Sign up</a></li>
        </ul>
      <% end %>
  </div>
  </nav>

<!-- search results -->

  <div class="search-div">
    <ul id="search-results">
    </ul>
  </div>

<%= yield %>

<!-- sign-in modal -->

<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledly="sign-in-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="sign-in-label">Sign In</h4>
        </div>

        <div class="modal-body">
          <form class="sign-in-form" enctype="multipart/form-data" role="form">

            <div class="form-group">
              <label for="username">Username</label>
                <input id="username" type="text" class="form-control sign-in-username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input id="password" type="password" class="form-control sign-in-password">
            </div>
            <div class="form-group" id="confirm-password-field">
              <label for="confirm-password">Confirm Password</label>
                <input id="confirm-password" type="password" class="confirm-password form-control">
            </div>

            <div class="modal-footer">
                <button class="sign-in-btn btn btn-primary" data-loading-text="Signing in">Sign in</button>
              </form>
            </div>

        </div>
      </div>
    </div>
  </div>

</body>
</html>
